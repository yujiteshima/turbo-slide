{
  "name": "turbo-slide",
  "version": "1.0.0",
  "description": "Turbo Frames-based slide deck with countdown timer and keyboard navigation for presentations.",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "lsof -ti:3000 | xargs kill -9 2>/dev/null; node server.js",
    "build:css": "npx tailwindcss -i ./public/tailwind-input.css -o ./public/tailwind.css --watch",
    "build:css:prod": "npx tailwindcss -i ./public/tailwind-input.css -o ./public/tailwind.css --minify",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:update": "npx playwright test --update-snapshots",
    "test:report": "npx playwright show-report",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "express": "^4.19.0",
    "pdf-to-img": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.18",
    "vitest": "^2.1.0"
  }
}
